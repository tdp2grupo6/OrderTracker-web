#!/usr/bin/env node
var debug = require('debug')('my-application');
var app = require('../app');

// dgacitua: Direcciones para lanzar el módulo NodeJS
app.set('port', process.env.OPENSHIFT_NODEJS_PORT || process.env.PORT || 8081);
app.set('ipaddr', process.env.OPENSHIFT_NODEJS_IP || '127.0.0.1');

// dgacitua: Direcciones para obtener el módulo Grails (Backend)
app.set('backendDir', 'asdf');

var server = app.listen(app.get('port'), app.get('ipaddr'), function() {
  console.log('Express server listening on port ' + server.address().port);
});
